<div id="group">
	<div class="wrapper">
	<!-- Header -->
		<header class="header">	<!-- used to be #header -->
			<h1>COGENT<a href="<%= home_index_path %>" class="icon fa-home fa-lg"></a></h1>

	    <nav class="links group_links">
	      <ul>
	        <li><a href="#">Profile</a></li>
	        <li><a href="#">Visualization</a></li>
	        <li><a href="#">Feed</a></li>
	        <li><a href="#">Random</a></li>
	      </ul>
	    </nav>
		</header>

		<div class="main"> <!-- used to be #main -->

			<!-- Post -->
			<% @groups.each do |group| %>
				<article class="post">
					<header id="group_header_invite"><!-- <%= group.id %> -->
							<div class="title">
								<h2><%= group.name %></h2>
							</div>
						<div class="meta">
							<time class="published" datetime="2015-11-01"><%= group.created_at %></time>
							<a href="#" class="author"><span class="name"><br><%= current_user.username %>
							</span><%= image_tag(current_user.image, class: 'logo') %></a>
							<li><%= link_to "Invite friends", new_user_group_invitation_path(current_user, group), remote: true %></li>
						</div>
					</header>
					<footer>
						<% if group.users.any? %>
							<ul class="stats">
								<li><a href="#">MEMBERS:</a></li>
								<% group.users.each do |user| %>
									<% if user.username == current_user.username %>
										<li><a href="#" class="icon fa-user">YOU</a></li>
									<% else %>
										<li><a href="#" class="icon fa-user"><%= user.username %></a></li>
									<% end %>
								<% end %>
						<% end %>
						</ul>
					</footer>
				</article>
			<% end %>
		</div>

	<!-- Footer -->


	</div>
</div><!-- end of new_group -->
