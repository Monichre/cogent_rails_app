<div class="col s12 m4">
  <div class="post card horizontal">
    <div class="card-image waves-effect waves-block waves-light">
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= post.title %><i class="material-icons right">more_vert</i></span>
        <p id="<%= post.id %>_content"><%= post.content %></p>
        <ul id="tags_<%= post.id %>" class="tag_list row">
          <% if post.tag_list.any? %>
            <% post.tag_list.each do |tag| %>
              <%= render partial: 'posts/tag', locals: { tag: tag } %>
            <% end %>
          <% end %>
        </ul>
      </div>
      <div class="card-action" id="<%= post.id%>">
        <p><a href="#"><%= post.url %></a></p>
        <p><%= link_to "Tag this", edit_post_path(post), class: "tag_link", remote: true %></p>
      </div>
    </div>
  </div>
</div>
